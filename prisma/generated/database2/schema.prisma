datasource db {
  provider = "mysql"
  url      = "mysql://root@localhost:3306/toko2"
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated/database2"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  authorId  Int
}
